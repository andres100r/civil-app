<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilUsuario">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenidos a City Alertas"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_robo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_robo"
        android:layout_width="383dp"
        android:layout_height="152dp"
        android:layout_marginBottom="316dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Robo"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextV_Contraseña"
        app:layout_constraintVertical_bias="0.524" />

    <Button
        android:id="@+id/btn_quejas"
        android:layout_width="454dp"
        android:layout_height="160dp"
        android:layout_marginBottom="156dp"
        android:background="@android:color/holo_orange_light"
        android:text="Quejas"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextV_Contraseña"
        app:layout_constraintVertical_bias="0.524" />

    <Button
        android:id="@+id/btn_accidentes"
        android:layout_width="381dp"
        android:layout_height="157dp"
        android:background="@android:color/holo_red_light"
        android:text="Accidentes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextV_Contraseña"
        app:layout_constraintVertical_bias="0.524" />

</android.support.constraint.ConstraintLayout>